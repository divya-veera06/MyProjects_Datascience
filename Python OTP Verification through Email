        "import random\n",
        "import smtplib\n",
        "from email.message import EmailMessage\n",
        "\n",
        "# Generate a 6-digit OTP\n",
        "otp = str(random.randint(100000, 999999))\n",
        "\n",
        "# Configure the SMTP server for Outlook\n",
        "server = smtplib.SMTP(\"smtp.office365.com\", 587)\n",
        "server.starttls()\n",
        "\n",
        "from_mail = 'divyaveera2024@outlook.com'\n",
        "password = '+_q2EyMDN@yG_iC'  # Ensure this password is correct and valid for your Outlook account\n",
        "\n",
        "server.login(from_mail, password)\n",
        "\n",
        "to_mail = input(\"Please enter your email address to receive the OTP: \")\n",
        "\n",
        "# Create the email message\n",
        "msg = EmailMessage()\n",
        "msg['Subject'] = 'OTP Verification'\n",
        "msg['From'] = from_mail\n",
        "msg['To'] = to_mail\n",
        "msg.set_content(f'Your OTP is: {otp}')\n",
        "\n",
        "# Send the email\n",
        "server.send_message(msg)\n",
        "print(\"Email sent\")\n",
        "\n",
        "# Close the server connection\n",
        "server.quit()\n",
        "\n",
        "# OTP validation with 3 attempts\n",
        "for attempt in range(3):\n",
        "    user_otp = input(\"Enter the OTP sent to your email: \")\n",
        "    if user_otp == otp:\n",
        "        print(\"OTP verified successfully!\")\n",
        "        break\n",
        "    else:\n",
        "        print(\"Invalid OTP. Please try again.\")\n",
        "else:\n",
        "    print(\"Maximum attempts reached. OTP verification failed.\")\n"
      ],
